.offset2
  %h1 Report Selection
  = render :partial => 'shared/flash_messages'
  = form_tag generate_report_path do
    .control-group
      .control-label
        = label_tag :report_start_date
      .controls
        = date_select :report, :start_date, order: [:month, :day, :year]
      .control-label
        = label_tag :report_end_date
      .controls
        = date_select :report, :end_date, order: [:month, :day, :year]
      .control-label
        = label_tag :report_name
      .controls
        = select_tag :report_name, options_for_select(@reports)
      = submit_tag 'Generate Report', :class => 'btn btn-danger btn-large'