.user
  = f.hidden_field :treatment_facility_id
  - technician = f.object.role_id != Role.find_by_name(Role::SUPER_ADMIN).id
  - if technician
    = f.hidden_field :_destroy
    = link_to_function "X", "if (confirm('Delete this user?')) remove_user(this)", :class => "close"
    %br/
  .control-label
    = f.label :email
  .controls
    = f.text_field :email
  - if f.object.new_record?
    .control-label
      = f.label :time_zone
    .controls
      = f.time_zone_select :time_zone, ActiveSupport::TimeZone::us_zones, :default => SlenderRay::Application.config.time_zone
    .control-label
      = f.label :password
    .controls
      = f.password_field :password
    .control-label
      = f.label :password_confirmation
    .controls
      = f.password_field :password_confirmation
